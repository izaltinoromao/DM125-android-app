<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/notifications">

        <SwitchPreferenceCompat
            android:key="daily_notification"
            android:summaryOff="@string/daily_notification_off"
            android:summaryOn="@string/daily_notification_on"
            android:title="@string/daily_notification" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/date_format">

        <ListPreference
            android:key="date_format"
            android:title="@string/select_date_format"
            android:defaultValue="numeric"
            android:entries="@array/date_format_entries"
            android:entryValues="@array/date_format_values"
            android:summary="%s" />

    </PreferenceCategory>

</PreferenceScreen>